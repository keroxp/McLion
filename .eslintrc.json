{
  "extends": ["eslint:recommended"],
  "env":{
    "node": true,
    "browser": true,
    "es6": false
  },
  "plugins":[
  ],
  "rules":{
    "semi": 2,
    "new-cap": 0,
    "comma-spacing": [2, {"before": false, "after": true}],
    "no-unused-vars": [1, {"args": "none"}],
    "no-constant-condition": 0,
    "no-shadow": 0,
    "no-loop-func": 0,
    "curly": 0,
    "no-console": [1, {"allow": ["warn", "error"]}]
  }
}
